
 <article class="container">
        <div class="row">
          <div class="col-sm-4">
          </div>
          <div class="col-sm-4">
          <h2 class="feat">Sign up</h2>
          		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          		  <%= devise_error_messages! %>
          		<p class="feat"><%= f.label :name %><br />
          		<%= f.text_field :name %></p>

          		  <div class="feat"><%= f.label :email %><br />
          		  <%= f.email_field :email %></div>

          		  <div class="feat"><%= f.label :password %><br />
          		  <%= f.password_field :password %></div>

          		  <div class="feat"><%= f.label :password_confirmation %><br />
          		  <%= f.password_field :password_confirmation %></div>

          		  <div class="feat"><%= f.submit "Sign up" %></div>
          		<% end %>

          		<%= render "devise/shared/links" %>

        </div>
        <div class="col-lg-4">
        </div>
         </div>
       </article>




