
	<article class="container usershow">
	    <div class="row">
	    	<div class="col-lg-3">
	    		
	    		<img src="<%= @user.profile_pic %>">
	    	</div>
	        <div class="col-lg-3">
	        	<div class="userinfo"
					  <h1 class="username"> <span class="username"> <%= @user.name %> </span></h1>
