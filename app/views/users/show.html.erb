		        </div>
	        </div>
			<div class="col-log-6">
			</div>

	    </div>
	</article>

		<div class="container ">
			<div class="row">
				<h2 class="goalhead"> <%= @user.name %>'s Goals</h2>
				<h5 class="goalnew"> <%= link_to 'New Goal', new_user_goal_path(@user) %> </h5>
				<h5 class="goalnew"> <%= link_to 'View All Partners', user_partners_path(@user) %> </h5>

			</div>
			<div class="row">
				<% @user.goals.each do |goal| %>
				<div class="col-sm-3 goals">
						<div class="goalbox">
							<div class="goaltitle"
